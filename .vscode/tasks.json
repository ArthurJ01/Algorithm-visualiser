{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build full project",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "main.cpp",
                "insertionSort.cpp",
                "-o",
                "main",
                "-Iheaders"
            ],
            "group": {
                "kind": "build"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build all",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "main.cpp",
                "sortingAlgorithms/insertionSort.cpp",
                "sortingAlgorithms/mergeSort.cpp",
                "sortingAlgorithms/sortingVisualiser.cpp",
                "draw.cpp",
                "initialize.cpp",
                "button.cpp",
                "-Iheaders",
                "-I\"${workspaceFolder}/SFML-3.0.0/include\"",
                "-DSFML_STATIC",
                "-Wall",
                "-o",
                "${fileDirname}\\main.exe",
                "-L\"${workspaceFolder}/SFML-3.0.0/lib\"",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}